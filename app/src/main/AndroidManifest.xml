<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.uohih.joowon">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.uohih.joowon"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity android:name=".main.IntroActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".main.MainListActivity" />
        <activity android:name=".worker.WorkerInsertActivity" />
        <activity android:name=".main.PictureActivity" />
        <activity android:name=".worker.WorkerMainActivity" />
        <activity android:name=".setting.SettingActivity" />
        <activity android:name=".setting.PasswordSettingActivity"></activity>
        <activity android:name=".setting.PasswordCheckActivity"></activity>
        <activity
            android:name=".vacation.VacationActivity"
            android:windowSoftInputMode="adjustNothing" />
        <activity android:name=".base.BlankActivity"></activity>
    </application>

</manifest>