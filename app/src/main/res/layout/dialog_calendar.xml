<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="calendarDate"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/rectangle_r4_ffffff">


        <ImageButton
            android:id="@+id/calendar_btnClose"
            android:layout_width="@dimen/dp35"
            android:layout_height="@dimen/dp35"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginRight="@dimen/dp15"
            android:background="@drawable/btn_close_selector"
            android:visibility="visible"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/calendar_tvDate"
            style="@style/Font_20_000000"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp35"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginTop="@dimen/dp10"
            android:drawableRight="@drawable/btn_dropdown_tri"
            android:gravity="center"
            android:text="2020.01"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/calendar_layTop"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp35"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/calendar_btnBackY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_back_selector" />

            <TextView
                android:id="@+id/calendar_tvYear"
                style="@style/Font_20_000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="2014" />

            <ImageButton
                android:id="@+id/calendar_btnNextY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_next_selector" />

            <ImageButton
                android:id="@+id/calendar_btnBackM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp03"
                android:background="@drawable/btn_back_selector" />

            <TextView
                android:id="@+id/calendar_tvMonth"
                style="@style/Font_20_000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="12" />

            <ImageButton
                android:id="@+id/calendar_btnNextM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_next_selector" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/calendar_layDay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp35"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginTop="@dimen/dp05"
            android:layout_marginRight="@dimen/dp10"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/calendar_tvDate">

            <TextView
                android:id="@+id/sun"
                style="@style/Font_15_f13e51"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Sun" />

            <TextView
                android:id="@+id/mon"
                style="@style/Font_15_000000"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Mon" />

            <TextView
                android:id="@+id/the"
                style="@style/Font_15_000000"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="The" />

            <TextView
                android:id="@+id/wed"
                style="@style/Font_15_000000"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Wed" />

            <TextView
                android:id="@+id/thu"
                style="@style/Font_15_000000"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Thu" />

            <TextView
                android:id="@+id/fri"
                style="@style/Font_15_000000"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Fri" />

            <TextView
                android:id="@+id/sat"
                style="@style/Font_15_3571d6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Sat" />
        </LinearLayout>

        <View
            android:id="@+id/calendar_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp01"
            android:background="@color/c_004680"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/calendar_layDay" />

        <GridView
            android:id="@+id/calendar_gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginTop="@dimen/dp05"
            android:layout_marginRight="@dimen/dp10"
            android:gravity="center"
            android:numColumns="7"
            android:stretchMode="columnWidth"
            app:layout_constraintBottom_toTopOf="@+id/calendar_btnConfirm"
            app:layout_constraintTop_toBottomOf="@id/calendar_layDay"
            tools:listitem="@layout/dialog_calendar_cell" />

        <!--버튼-->
        <Button
            android:id="@+id/calendar_btnConfirm"
            style="@style/Font_16_ffffff"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp50"
            android:layout_marginTop="@dimen/dp30"
            android:background="@drawable/btn_bottom_selector"
            android:text="@string/btnConfirm"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>