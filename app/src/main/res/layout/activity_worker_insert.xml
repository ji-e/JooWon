<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.WorkerInsertActivity">

    <!--상단 타이틀 및 아이콘 바-->
    <com.example.uohih.joowon.view.TopTitleView
        android:id="@+id/worker_insert_title_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp45"
        android:gravity="center_vertical"
        app:btnClose="true"
        app:tvTitle="@string/WorkerInsertTitle" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/worker_insert_title_view"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="@dimen/dp16">
                <!--사진등록 버튼-->
                <RelativeLayout
                    android:id="@+id/worker_insert_plus"
                    android:layout_width="@dimen/dp80"
                    android:layout_height="@dimen/dp80"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/dp04">

                    <ImageView
                        android:layout_width="@dimen/dp80"
                        android:layout_height="@dimen/dp80"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/people" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/plus" />

                </RelativeLayout>


                <!--이름-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp10"
                    android:text="@string/WorkerInsertName"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/dp15"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/worker_insert_edt_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp40"
                        android:background="@drawable/input_selector"
                        android:hint="@string/WorkerInsertName2"
                        android:imeOptions="actionNext"
                        android:paddingLeft="@dimen/dp10"
                        android:singleLine="true"
                        android:textSize="@dimen/dp15" />

                    <ImageButton
                        android:id="@+id/worker_insert_btn_delete1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp10"
                        android:background="@drawable/btn_delete_selector"
                        android:visibility="gone" />
                </RelativeLayout>


                <!--입사 날짜-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp16"
                    android:layout_marginBottom="@dimen/dp10"
                    android:text="@string/WorkerInsertJoin"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/dp15"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/worker_insert_edt_join"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp40"
                        android:background="@drawable/input_selector"
                        android:textColor="@color/c_333333"
                        android:imeOptions="actionNext"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp10"
                        android:textSize="@dimen/dp15" />

                    <ImageView
                        android:id="@+id/worker_insert_btn_calendar"
                        android:layout_width="@dimen/dp40"
                        android:layout_height="@dimen/dp40"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/btn_calendar_selector" />
                </RelativeLayout>


                <!--핸드폰 번호-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp16"
                    android:layout_marginBottom="@dimen/dp10"
                    android:text="@string/WorkerInsertPhone"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/dp15"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/worker_insert_edt_phone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp40"
                        android:background="@drawable/input_selector"
                        android:hint="@string/WorkerInsertPhone2"
                        android:imeOptions="actionNext"
                        android:paddingLeft="@dimen/dp10"
                        android:singleLine="true"
                        android:textSize="@dimen/dp15" />

                    <ImageButton
                        android:id="@+id/worker_insert_btn_delete2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp10"
                        android:background="@drawable/btn_delete_selector"
                        android:visibility="gone" />
                </RelativeLayout>


                <!--총 휴가-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp16"
                    android:layout_marginBottom="@dimen/dp10"
                    android:text="@string/WorkerInsertVacation"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/dp15"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="@dimen/dp200"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/worker_insert_edt_vacation"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp40"
                        android:background="@drawable/input_selector"
                        android:hint="15"
                        android:imeOptions="actionNext"
                        android:paddingLeft="@dimen/dp10"
                        android:singleLine="true"
                        android:textSize="@dimen/dp15" />

                    <ImageButton
                        android:id="@+id/worker_insert_btn_delete3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp10"
                        android:background="@drawable/btn_delete_selector"
                        android:visibility="gone" />
                </RelativeLayout>

            </LinearLayout>
            <!--확인버튼-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp45"
                android:layout_alignParentBottom="true">

                <ImageButton
                    android:id="@+id/worker_insert_btn_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_bottom_selector" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/btn01"
                    android:textColor="@color/c_ffffff"
                    android:textSize="@dimen/dp20" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>