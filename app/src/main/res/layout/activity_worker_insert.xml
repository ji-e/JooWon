<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ffffff"
    android:orientation="vertical"
    tools:context=".view.worker.WorkerInsertActivity">

    <!--상단 타이틀 및 아이콘 바-->
    <com.example.uohih.joowon.customview.TopTitleView
        android:id="@+id/worker_insert_title_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        android:gravity="center_vertical"
        app:btnClose="true"
        app:tvTitle="@string/workerInsert_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp16"
            android:paddingTop="@dimen/dp16"
            android:paddingRight="@dimen/dp16"
            android:paddingBottom="@dimen/dp10">


            <!--사진등록 버튼-->
            <RelativeLayout
                android:id="@+id/worker_insert_plus"
                android:layout_width="@dimen/dp80"
                android:layout_height="@dimen/dp80"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp04"
                android:onClick="onClickWorkerInsert">


                <ImageView
                    android:id="@+id/worker_img"
                    android:layout_width="@dimen/dp80"
                    android:layout_height="@dimen/dp80"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/people" />

                <ImageView
                    android:id="@+id/worker_img_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/plus" />

            </RelativeLayout>


            <!--이름-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp10"
                android:text="@string/workerInsert_name"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/dp15"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/worker_insert_edt_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40"
                    android:background="@drawable/input_selector"
                    android:hint="@string/workerInsert_name2"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLength="15"
                    android:paddingLeft="@dimen/dp10"
                    android:singleLine="true"
                    android:textSize="@dimen/dp15" />

                <ImageButton
                    android:id="@+id/worker_insert_btn_delete1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp10"
                    android:background="@drawable/btn_delete_selector"
                    android:visibility="gone"
                    android:onClick="onClickWorkerInsert" />
            </RelativeLayout>


            <!--입사 날짜-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp16"
                android:layout_marginBottom="@dimen/dp10"
                android:text="@string/workerInsert_join"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/dp15"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/worker_insert_edt_join"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40"
                    android:background="@drawable/input_selector"
                    android:gravity="center_vertical"
                    android:imeOptions="actionNext"
                    android:paddingLeft="@dimen/dp10"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/dp15"
                    android:onClick="onClickWorkerInsert"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />

                <ImageView
                    android:id="@+id/worker_insert_btn_calendar"
                    android:layout_width="@dimen/dp40"
                    android:layout_height="@dimen/dp40"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/btn_calendar_selector" />
            </RelativeLayout>


            <!--핸드폰 번호-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp16"
                android:layout_marginBottom="@dimen/dp10"
                android:text="@string/workerInsert_phone"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/dp15"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/worker_insert_edt_phone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40"
                    android:background="@drawable/input_selector"
                    android:hint="@string/workerInsert_phone2"
                    android:imeOptions="actionNext"
                    android:inputType="phone"
                    android:maxLength="13"
                    android:paddingLeft="@dimen/dp10"
                    android:singleLine="true"
                    android:textSize="@dimen/dp15" />

                <ImageButton
                    android:id="@+id/worker_insert_btn_delete2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp10"
                    android:background="@drawable/btn_delete_selector"
                    android:visibility="gone"
                    android:onClick="onClickWorkerInsert" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp07"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!--총 휴가-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp16"
                        android:layout_marginBottom="@dimen/dp10"
                        android:text="@string/workerInsert_vacation"
                        android:textColor="@color/c_333333"
                        android:textSize="@dimen/dp15"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/worker_insert_edt_vacation"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp40"
                            android:background="@drawable/input_selector"
                            android:hint="15"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLength="3"
                            android:paddingLeft="@dimen/dp10"
                            android:singleLine="true"
                            android:textSize="@dimen/dp15" />

                        <ImageButton
                            android:id="@+id/worker_insert_btn_delete3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp10"
                            android:background="@drawable/btn_delete_selector"
                            android:visibility="gone"
                            android:onClick="onClickWorkerInsert" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/worker_insert_layout_use"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp07"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:visibility="invisible">

                    <!--사용한 휴가-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp16"
                        android:layout_marginBottom="@dimen/dp10"
                        android:text="@string/workerInsert_use"
                        android:textColor="@color/c_333333"
                        android:textSize="@dimen/dp15"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/worker_insert_edt_use"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp40"
                            android:background="@drawable/input_selector"
                            android:hint="0"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLength="4"
                            android:paddingLeft="@dimen/dp10"
                            android:singleLine="true"
                            android:textSize="@dimen/dp15" />

                        <ImageButton
                            android:id="@+id/worker_insert_btn_delete4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp10"
                            android:background="@drawable/btn_delete_selector"
                            android:visibility="gone"
                            android:onClick="onClickWorkerInsert" />
                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>
            <!--삭제-->
            <LinearLayout
                android:id="@+id/worker_layout_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/dp16"
                android:orientation="horizontal"
                android:visibility="gone"
                android:onClick="onClickWorkerInsert">

                <ImageButton
                    android:layout_width="@dimen/dp25"
                    android:layout_height="@dimen/dp25"
                    android:background="@drawable/btn_trash_selector" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/workerUpdate_delete"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/dp15" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!--확인버튼-->
    <Button
        android:id="@+id/worker_insert_btn_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:background="@drawable/btn_bottom_selector"
        android:text="@string/btn01"
        android:textColor="@color/c_ffffff"
        android:textSize="@dimen/dp20"
        android:onClick="onClickWorkerInsert" />


</LinearLayout>