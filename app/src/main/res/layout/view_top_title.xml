<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/top_title_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp60"
    android:background="@color/c_ffffff"
    android:gravity="center_vertical"
    android:paddingStart="@dimen/dp20"
    android:paddingEnd="@dimen/dp20">


    <ImageButton
        android:id="@+id/top_btnLogo"
        android:layout_width="@dimen/dp27"
        android:layout_height="@dimen/dp27"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp02"
        android:background="@drawable/logo2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/top_btnBack"
        android:layout_width="@dimen/dp33"
        android:layout_height="@dimen/dp33"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_back_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/top_tvJW"
        style="@style/Font_20_000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp05"
        android:text="@string/name"
        android:textAlignment="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/top_btnLogo"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/top_tvTitle"
        style="@style/Font_20_000000"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent">

        <CheckBox
            android:id="@+id/top_ckb"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:layout_marginStart="@dimen/dp10"
            android:background="@drawable/btn_ckb_selector"
            android:button="@null" />

        <ImageButton
            android:id="@+id/top_btnWrite"
            android:layout_width="@dimen/dp39"
            android:layout_height="@dimen/dp39"
            android:layout_marginStart="@dimen/dp10"
            android:background="@drawable/btn_write_selector" />

        <ImageButton
            android:id="@+id/top_btnSetting"
            android:layout_width="@dimen/dp39"
            android:layout_height="@dimen/dp39"
            android:layout_marginStart="@dimen/dp10"
            android:background="@drawable/btn_setting_selector" />

        <ImageButton
            android:id="@+id/top_btnClose"
            android:layout_width="@dimen/dp36"
            android:layout_height="@dimen/dp36"
            android:background="@drawable/btn_close_selector" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>