<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ffffff"
    android:orientation="vertical"
    tools:context=".vacation.VacationActivity">

    <!--상단 타이틀 및 아이콘 바-->
    <com.example.uohih.joowon.view.TopTitleView
        android:id="@+id/vacation_title_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        android:gravity="center_vertical"
        app:btnClose="true"
        app:tvTitle="" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp16"
        android:paddingTop="@dimen/dp16"
        android:paddingRight="@dimen/dp16"
        android:paddingBottom="@dimen/dp10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/vacation_edt_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                android:background="@drawable/input_selector"
                android:hint="@string/workerInsert_name2"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLength="15"
                android:paddingLeft="@dimen/dp10"
                android:singleLine="true"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/dp15" />


            <!-- <com.pchmn.materialchips.ChipsInput
                 android:id="@+id/ vacation_edt_name"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:background="@drawable/input_selector"
                 android:inputType="text"
                 android:maxLength="15"
                 android:singleLine="true"
                 android:textSize="@dimen/dp15"
                 app:chip_deletable="true"
                 app:chip_deleteIconColor="@color/c_ffffff"
                 app:chip_hasAvatarIcon="true"
                 app:hint="@string/workerInsert_name2"
                 app:hintColor="@color/c_cccccc"
                 app:maxRows="3"
                 app:textColor="@color/c_333333" />-->

            <ImageButton
                android:id="@+id/vacation_btn_delete1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp10"
                android:layout_toLeftOf="@id/vacation_btn_search"
                android:background="@drawable/btn_delete_selector"
                android:visibility="gone" />

            <Button
                android:id="@+id/vacation_btn_search"
                android:layout_width="@dimen/dp60"
                android:layout_height="@dimen/dp40"
                android:layout_alignParentRight="true"
                android:background="@drawable/rectangle_right_selector"
                android:text="@string/btn03"
                android:textColor="@color/c_ffffff"
                android:textSize="@dimen/dp12" />
        </RelativeLayout>

        <ScrollView
            android:id="@+id/vacation_sv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:orientation="horizontal">

                    <!--Image-->
                    <ImageView
                        android:id="@+id/vacation_img_people"
                        android:layout_width="@dimen/dp70"
                        android:layout_height="@dimen/dp70"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/dp16"
                        android:background="@drawable/people" />

                    <!--Item-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp16"
                        android:layout_marginTop="@dimen/dp16"
                        android:layout_marginBottom="@dimen/dp16"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!--Name-->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/mainList_name"
                            android:textColor="@color/c_333333"
                            android:textSize="@dimen/dp15"
                            android:textStyle="bold" />

                        <!--Join-->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/mainList_join"
                            android:textColor="@color/c_333333"
                            android:textSize="@dimen/dp15"
                            android:textStyle="bold" />

                        <!--Phone-->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/mainList_phone"
                            android:textColor="@color/c_333333"
                            android:textSize="@dimen/dp15"
                            android:textStyle="bold" />

                        <!--Vacation-->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/mainList_vacation"
                            android:textColor="@color/c_333333"
                            android:textSize="@dimen/dp15"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!--Data-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp16"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <!--Name-->
                        <TextView
                            android:id="@+id/vacation_tv_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/mainList_name"
                            android:textColor="@color/c_333333"
                            android:textSize="@dimen/dp15" />

                        <!--Join-->
                        <TextView
                            android:id="@+id/vacation_tv_join"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/mainList_join"
                            android:textColor="@color/c_333333"
                            android:textSize="@dimen/dp15" />

                        <!--Phone-->
                        <TextView
                            android:id="@+id/vacation_tv_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/mainList_phone"
                            android:textColor="@color/c_333333"
                            android:textSize="@dimen/dp15" />

                        <!--Vacation-->
                        <TextView
                            android:id="@+id/vacation_tv_vacation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/mainList_vacation"
                            android:textColor="@color/c_333333"
                            android:textSize="@dimen/dp15" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp01"
                    android:layout_marginBottom="@dimen/dp10"
                    android:background="@color/c_cccccc" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp07"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!--휴가 시작 기간-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp10"
                            android:text="@string/worker_vacation_start_date"
                            android:textColor="@color/c_333333"
                            android:textSize="@dimen/dp15"
                            android:textStyle="bold" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <TextView
                                android:id="@+id/vacation_tv_startD"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp40"
                                android:background="@drawable/input_selector"
                                android:gravity="center_vertical"
                                android:imeOptions="actionNext"
                                android:paddingLeft="@dimen/dp10"
                                android:textColor="@color/c_333333"
                                android:textSize="@dimen/dp15" />

                            <ImageView
                                android:id="@+id/vacation_btn_startC"
                                android:layout_width="@dimen/dp40"
                                android:layout_height="@dimen/dp40"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/btn_calendar_selector" />
                        </RelativeLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp20"
                        android:text=" ~ "
                        android:textColor="@color/c_333333"
                        android:textSize="@dimen/dp15"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp07"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!--휴가 마지막 기간-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp10"
                            android:text="@string/worker_vacation_end_date"
                            android:textColor="@color/c_333333"
                            android:textSize="@dimen/dp15"
                            android:textStyle="bold" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <TextView
                                android:id="@+id/vacation_tv_endD"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp40"
                                android:background="@drawable/input_selector"
                                android:gravity="center_vertical"
                                android:imeOptions="actionNext"
                                android:paddingLeft="@dimen/dp10"
                                android:textColor="@color/c_333333"
                                android:textSize="@dimen/dp15" />

                            <ImageView
                                android:id="@+id/vacation_btn_endC"
                                android:layout_width="@dimen/dp40"
                                android:layout_height="@dimen/dp40"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/btn_calendar_selector" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>


                <!--휴가 내용-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp16"
                    android:layout_marginBottom="@dimen/dp10"
                    android:text="@string/worker_vacation_content"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/dp15"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/vacation_edt_content"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp150"
                        android:background="@drawable/input_selector"
                        android:hint="@string/workerInsert_name2"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLength="15"
                        android:paddingLeft="@dimen/dp10"
                        android:singleLine="true"
                        android:textSize="@dimen/dp15" />

                    <ImageButton
                        android:id="@+id/vacation_btn_delete2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp10"
                        android:background="@drawable/btn_delete_selector"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:id="@+id/vacation_ly_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp20"
            android:layout_marginBottom="@dimen/dp20"
            android:background="@drawable/rectangle_nor2"
            android:padding="@dimen/dp02">

            <TextView
                android:id="@+id/vacation_tv_nothing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp14"
                android:textColor="@color/c_cccccc"
                android:text="@string/worker_vacation_nothing"
                android:layout_centerInParent="true"/>

            <ListView
                android:id="@+id/vacation_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dividerHeight="0dp"
                tools:listitem="@layout/list_item_vacation"
                android:visibility="gone"/>
        </RelativeLayout>

    </LinearLayout>


    <!--확인버튼-->
    <Button
        android:id="@+id/vacation_btn_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:background="@drawable/btn_bottom_selector"
        android:text="@string/btn01"
        android:textColor="@color/c_ffffff"
        android:textSize="@dimen/dp20" />


</LinearLayout>