<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="signUpVm"
            type="com.example.uohih.joowon.ui.signup.SignUpViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.signup.SignUpActivity"
        android:background="@color/c_ffffff">

        <!--상단 타이틀 및 아이콘 바-->
        <com.example.uohih.joowon.customview.TopTitleView
            android:id="@+id/signup_title_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp60"
            android:gravity="center_vertical"
            app:btnClose="true"
            app:layout_constraintTop_toTopOf="parent"
            app:tvTitle="@string/signup_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_marginRight="@dimen/dp16"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/signup_title_view">

            <TextView
                style="@style/Font_14_000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/signup_email" />

            <EditText
                android:id="@+id/signup_edt_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                android:layout_marginBottom="@dimen/dp16" />

            <TextView
                style="@style/Font_14_000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/signup_pw" />

            <EditText
                android:id="@+id/signup_edt_pw"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                android:layout_marginBottom="@dimen/dp16" />

            <TextView
                style="@style/Font_14_000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/signup_pw2" />

            <EditText
                android:id="@+id/signup_edt_pw2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40" />

            <TextView
                android:id="@+id/signup_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{signUpVm.testTV}"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>