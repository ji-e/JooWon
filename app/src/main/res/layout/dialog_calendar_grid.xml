<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="calendarInfo"
            type="java.util.ArrayList" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/calendar_layDay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp35"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginTop="@dimen/dp05"
            android:layout_marginEnd="@dimen/dp10"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/sun"
                style="@style/Font_15_f13e51"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="일" />

            <TextView
                android:id="@+id/mon"
                style="@style/Font_15_000000"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="월" />

            <TextView
                android:id="@+id/the"
                style="@style/Font_15_000000"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="화" />

            <TextView
                android:id="@+id/wed"
                style="@style/Font_15_000000"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="수" />

            <TextView
                android:id="@+id/thu"
                style="@style/Font_15_000000"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="목" />

            <TextView
                android:id="@+id/fri"
                style="@style/Font_15_000000"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="금" />

            <TextView
                android:id="@+id/sat"
                style="@style/Font_15_3571d6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="토" />
        </LinearLayout>

        <GridView
            android:id="@+id/calendar_gridview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp240"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginEnd="@dimen/dp10"
            android:gravity="center"
            android:numColumns="7"
            android:stretchMode="columnWidth"
            android:visibility="visible"
            tools:listitem="@layout/dialog_calendar_cell"
            app:layout_constraintTop_toBottomOf="@id/calendar_layDay"
            android:adjustViewBounds="true" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>