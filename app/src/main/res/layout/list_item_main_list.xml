<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="mainListItem"
            type="com.example.uohih.joowon.model.JW3001ResBodyList" />
    </data>

    <ru.rambler.libs.swipe_layout.SwipeLayout
        android:id="@+id/mainList_swipeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_ffffff"
        android:orientation="vertical"
        tools:ignore="MissingPrefix">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mainList_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--Image-->
            <ImageView
                android:id="@+id/mainList_imgPeople"
                android:layout_width="@dimen/dp60"
                android:layout_height="@dimen/dp60"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/dp20"
                android:background="@drawable/people"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--Item-->
            <LinearLayout
                android:id="@+id/mainList_lay_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginTop="@dimen/dp20"
                android:layout_marginBottom="@dimen/dp20"
                android:layout_weight="1"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/mainList_imgPeople"
                app:layout_constraintTop_toTopOf="parent">

                <!--Name-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mainList_name"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/dp14"
                    android:textStyle="bold" />

                <!--Join-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mainList_join"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/dp14"
                    android:textStyle="bold" />

                <!--Phone-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mainList_phone"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/dp14"
                    android:textStyle="bold" />

                <!--Vacation-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mainList_vacation"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/dp14"
                    android:textStyle="bold" />
            </LinearLayout>

            <!--Data-->
            <LinearLayout
                android:id="@+id/mainList_lay_data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginTop="@dimen/dp20"
                android:layout_marginBottom="@dimen/dp20"
                android:layout_weight="2"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/mainList_lay_item"
                app:layout_constraintRight_toLeftOf="@id/mainList_btnNext"
                app:layout_constraintTop_toTopOf="parent">

                <!--Name-->
                <TextView
                    android:id="@+id/mainList_tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/dp14"
                    tools:text="@string/mainList_name"
                    android:text="@{mainListItem.name}" />

                <!--Join-->
                <TextView
                    android:id="@+id/mainList_tvJoin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/dp14"
                    tools:text="@string/mainList_join"
                    android:text="@{mainListItem.entered_date}" />

                <!--Phone-->
                <TextView
                    android:id="@+id/mainList_tvPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/dp14"
                    tools:text="@string/mainList_phone"
                    android:text="@{mainListItem.phone_number}" />

                <!--Vacation-->
                <TextView
                    android:id="@+id/mainList_tvVacation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/dp14"
                    tools:text="@string/mainList_vacation"
                    android:text="@{mainListItem.use_vacation_cnt+&quot;/&quot;+mainListItem.total_vacation_cnt}" />
            </LinearLayout>

            <!--Next-->
            <ImageView
                android:id="@+id/mainList_btnNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp20"
                android:background="@drawable/btn_next_selector"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--CheckBox-->
            <!--        <CheckBox-->
            <!--            android:id="@+id/mainList_check"-->
            <!--            android:layout_width="wrap_content"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:layout_gravity="center_vertical"-->
            <!--            android:layout_marginRight="@dimen/dp11"-->
            <!--            android:buttonTint="@color/c_004680"-->
            <!--            android:visibility="gone" />-->
        </androidx.constraintlayout.widget.ConstraintLayout>


        <!--RIGHT-->
        <FrameLayout
            android:id="@+id/mainList_rightView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/c_e6e6e6"
            android:padding="@dimen/dp10"
            app:bring_to_clamp="@dimen/dp100"
            app:clamp="self"
            app:gravity="right"
            app:sticky="none">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/btn_trash_selector" />
        </FrameLayout>

        <!--LEFT-->
        <FrameLayout
            android:id="@+id/mainList_leftView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/c_004680"
            android:padding="@dimen/dp10"
            app:bring_to_clamp="@dimen/dp100"
            app:clamp="self"
            app:gravity="left"
            app:sticky="none">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/btn_trash_selector" />
        </FrameLayout>

    </ru.rambler.libs.swipe_layout.SwipeLayout>
</layout>