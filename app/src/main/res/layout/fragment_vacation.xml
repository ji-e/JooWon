<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vacation_sv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:visibility="visible"
    android:orientation="vertical"
    android:background="@color/c_ffffff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="none"
        android:paddingLeft="@dimen/dp16"
        android:paddingRight="@dimen/dp16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--Image-->
            <ImageView
                android:id="@+id/vacation_img_people"
                android:layout_width="@dimen/dp70"
                android:layout_height="@dimen/dp70"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/dp16"
                android:background="@drawable/people" />

            <!--Item-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp16"
                android:layout_marginTop="@dimen/dp16"
                android:layout_marginBottom="@dimen/dp16"
                android:layout_weight="1"
                android:orientation="vertical">

                <!--Name-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mainList_name"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/dp15"
                    android:textStyle="bold" />

                <!--Join-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mainList_join"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/dp15"
                    android:textStyle="bold" />

                <!--Phone-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mainList_phone"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/dp15"
                    android:textStyle="bold" />

                <!--Vacation-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mainList_vacation"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/dp15"
                    android:textStyle="bold" />
            </LinearLayout>

            <!--Data-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp16"
                android:layout_weight="2"
                android:orientation="vertical">

                <!--Name-->
                <TextView
                    android:id="@+id/vacation_tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mainList_name"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/dp15" />

                <!--Join-->
                <TextView
                    android:id="@+id/vacation_tv_join"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mainList_join"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/dp15" />

                <!--Phone-->
                <TextView
                    android:id="@+id/vacation_tv_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mainList_phone"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/dp15" />

                <!--Vacation-->
                <TextView
                    android:id="@+id/vacation_tv_vacation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mainList_vacation"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/dp15" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp01"
            android:layout_marginBottom="@dimen/dp10"
            android:background="@color/c_cccccc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp07"
                android:layout_weight="1"
                android:orientation="vertical">

                <!--휴가 시작 기간-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp10"
                    android:text="@string/vacation_start_date"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/dp15"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/vacation_tv_startD"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp40"
                        android:background="@drawable/input_selector"
                        android:gravity="center_vertical"
                        android:imeOptions="actionNext"
                        android:paddingLeft="@dimen/dp10"
                        android:textColor="@color/c_333333"
                        android:textSize="@dimen/dp15" />

                    <ImageView
                        android:id="@+id/vacation_btn_startC"
                        android:layout_width="@dimen/dp40"
                        android:layout_height="@dimen/dp40"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/btn_calendar_selector" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp20"
                android:text=" ~ "
                android:textColor="@color/c_333333"
                android:textSize="@dimen/dp15"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp07"
                android:layout_weight="1"
                android:orientation="vertical">

                <!--휴가 마지막 기간-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp10"
                    android:text="@string/vacation_end_date"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/dp15"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/vacation_tv_endD"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp40"
                        android:background="@drawable/input_selector"
                        android:gravity="center_vertical"
                        android:imeOptions="actionNext"
                        android:paddingLeft="@dimen/dp10"
                        android:textColor="@color/c_333333"
                        android:textSize="@dimen/dp15" />

                    <ImageView
                        android:id="@+id/vacation_btn_endC"
                        android:layout_width="@dimen/dp40"
                        android:layout_height="@dimen/dp40"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/btn_calendar_selector" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/vacation_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20"
            android:layout_marginBottom="@dimen/dp10"
            android:background="@drawable/rectangle_nor3"
            android:orientation="vertical"
            android:padding="@dimen/dp02">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp16"
                android:paddingBottom="@dimen/dp05"
                android:paddingTop="@dimen/dp05"
                android:background="@color/c_e6e6e6">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.3"
                    android:text="@string/vacation_date"
                    android:textSize="@dimen/dp14" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/vacation_use_cnt"
                    android:textSize="@dimen/dp14"
                    android:paddingLeft="@dimen/dp02" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/vacation_half"
                    android:textSize="@dimen/dp14"
                    android:paddingLeft="@dimen/dp03" />
            </LinearLayout>
            <!--            <View-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="@dimen/dp01"-->
            <!--                android:background="@color/c_cccccc"/>-->
            <ListView
                android:id="@+id/vacation_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"
                android:dividerHeight="0dp"
                tools:listitem="@layout/list_item_vacation" />
        </LinearLayout>

        <TextView
            android:id="@+id/vacation_tv_use_vc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="center_vertical"
            android:text="@string/vacation_use_vacation"
            android:textColor="@color/c_004680"
            android:textSize="@dimen/dp15" />

        <!--휴가 내용-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp16"
            android:layout_marginBottom="@dimen/dp10"
            android:text="@string/vacation_content"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/dp15"
            android:textStyle="bold" />
        <!---->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp30">
            <!---->
            <EditText
                android:id="@+id/vacation_edt_content"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp150"
                android:background="@drawable/input_selector"
                android:hint="@string/vacation_hint2"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLength="15"
                android:paddingLeft="@dimen/dp10"
                android:singleLine="true"
                android:textSize="@dimen/dp15" />

            <ImageButton
                android:id="@+id/vacation_btn_delete2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp10"
                android:background="@drawable/btn_delete_selector"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>


    </ScrollView>

    <!--확인버튼-->
    <Button
        android:id="@+id/vacation_btn_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:background="@drawable/btn_bottom_selector"
        android:text="@string/btn04"
        android:textColor="@color/c_ffffff"
        android:textSize="@dimen/dp20" />
</LinearLayout>