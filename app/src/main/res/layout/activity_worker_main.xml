<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".worker.WorkerMainActivity"
    android:background="@color/c_ffffff">

    <!--상단 타이틀 및 아이콘 바-->
    <com.example.uohih.joowon.view.TopTitleView
        android:id="@+id/main_list_title_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        android:gravity="center_vertical"
        app:btnClose="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <!--Image-->
        <com.example.uohih.joowon.view.CircularImageView
            android:id="@+id/img_worker_people"
            android:layout_width="@dimen/dp90"
            android:layout_height="@dimen/dp90"
            android:layout_marginBottom="@dimen/dp10"
            android:background="@drawable/people"
            android:onClick="btnOnClick"/>

        <TextView
            android:id="@+id/tv_worker_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름 (2000.00.00)"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/dp18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_worker_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="P.H 010-000-000"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/dp15"
            />

        <TextView
            android:id="@+id/tv_worker_vacation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="vacation 0/15"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/dp15"
             />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp40"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/dp15"
            android:layout_marginTop="@dimen/dp05">
            <ImageButton
                android:id="@+id/btn_worker_write"
                android:layout_width="@dimen/dp40"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_write_selector"
                android:onClick="btnOnClick"/>

            <ImageButton
                android:id="@+id/btn_worker_list"
                android:layout_width="@dimen/dp40"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_list_selector"
                android:onClick="btnOnClick"/>

            <ImageButton
                android:id="@+id/btn_worker_calendar"
                android:layout_width="@dimen/dp40"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_calendar_selector"
                android:visibility="gone"
                android:onClick="btnOnClick"/>

            <ImageButton
                android:id="@+id/btn_worker_call"
                android:layout_width="@dimen/dp40"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_call_selector"
                android:onClick="btnOnClick"/>

            <ImageButton
                android:id="@+id/btn_worker_setting"
                android:layout_width="@dimen/dp40"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_setting_selector"
                android:onClick="btnOnClick"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp20"
        android:background="@color/c_dddddd"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:orientation="vertical"
        android:layout_gravity="center">

        <ListView
            android:id="@+id/list_worker"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>

        <GridView
            android:id="@+id/grid_worker"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></GridView>

    </FrameLayout>



</LinearLayout>