<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="signInVm"
            type="com.example.uohih.joowon.ui.signin.SignInViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.signup.SignUpInitActiviy">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp60"
            android:background="@drawable/rectangle_r50_0035" />

        <View
            android:id="@+id/signin_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp70"
            android:background="@drawable/rectangle_r50_ffff" />

        <!--상단 타이틀 및 아이콘 바-->
        <com.example.uohih.joowon.ui.customView.TopTitleView
            android:id="@+id/signin_titleView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp60"
            android:layout_marginTop="@dimen/dp40"
            android:gravity="center_vertical"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:tvTitle="@string/signin_title" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@id/signin_background">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp40">

                <TextView
                    android:id="@+id/signin_tvSignIn"
                    style="@style/Font_20_000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:text="@string/signin_title"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/signin_edtEmail"
                    style="@style/Font_12_000000"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40"
                    android:layout_marginTop="@dimen/dp25"
                    android:background="@drawable/input_selector"
                    android:hint="@string/signin_email_hint"
                    android:inputType="textEmailAddress"
                    android:paddingStart="@dimen/dp10"
                    android:paddingEnd="@dimen/dp30"
                    android:singleLine="true"
                    app:layout_constraintTop_toBottomOf="@id/signin_tvSignIn" />

                <ImageButton
                    android:id="@+id/signin_btnDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/dp10"
                    android:background="@drawable/btn_delete_selector"
                    android:onClick="onClickSignIn"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@id/signin_edtEmail"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/signin_edtEmail"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/signin_tvEmailEerr"
                    style="@style/Font_10_f13e51"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:argId="@{signInVm.signInFormState.emailMsg}"
                    app:format="@{@string/string_format}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/signin_edtEmail"
                    tools:text="에러에러에러에러에러" />


                <EditText
                    android:id="@+id/signin_edtPw"
                    style="@style/Font_12_000000"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40"
                    android:layout_marginTop="@dimen/dp07"
                    android:background="@drawable/input_selector"
                    android:hint="@string/signin_pw_hint"
                    android:inputType="textPassword"
                    android:maxLength="15"
                    android:paddingStart="@dimen/dp10"
                    android:singleLine="true"
                    app:layout_constraintTop_toBottomOf="@id/signin_tvEmailEerr" />

                <CheckBox
                    android:id="@+id/signin_chkPwVisible"
                    android:layout_width="@dimen/dp20"
                    android:layout_height="@dimen/dp20"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/dp10"
                    android:background="@drawable/btn_eye_selector"
                    android:button="@null"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@id/signin_edtPw"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/signin_edtPw"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/signin_tvPwErr"
                    style="@style/Font_10_f13e51"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:argId="@{signInVm.signInFormState.passwordError}"
                    app:format="@{@string/string_format}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/signin_edtPw"
                    tools:text="에러에러에러에러에러" />


                <CheckBox
                    android:id="@+id/signin_chkAutoSignIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="@dimen/dp02"
                    android:layout_marginEnd="@dimen/dp10"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/signin_tvPwErr" />


                <TextView
                    style="@style/Font_12_4a4a4a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/signin_auto_signin"
                    app:layout_constraintBottom_toBottomOf="@id/signin_chkAutoSignIn"
                    app:layout_constraintStart_toEndOf="@id/signin_chkAutoSignIn"
                    app:layout_constraintTop_toTopOf="@id/signin_chkAutoSignIn" />

                <Button
                    android:id="@+id/signin_btnSignin"
                    style="@style/Font_16_ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp50"
                    android:layout_marginTop="@dimen/dp05"
                    android:background="@drawable/btn_bottom_r4_selector"
                    android:enabled="@{signInVm.signInFormState.dataValid}"
                    android:onClick="onClickSignIn"
                    android:text="@string/signin_title"
                    app:layout_constraintTop_toBottomOf="@id/signin_chkAutoSignIn" />


                <LinearLayout
                    android:id="@+id/signin_laySignup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/signin_btnSignin">

                    <TextView
                        android:id="@+id/signin_tvSignup"
                        style="@style/Font_12_4a4a4a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onClickSignIn"
                        android:paddingTop="@dimen/dp16"
                        android:paddingEnd="@dimen/dp16"
                        android:paddingBottom="@dimen/dp16"
                        android:text="@string/signin_sign_up" />

                    <TextView
                        android:id="@+id/signin_tvDiv"
                        style="@style/Font_12_4a4a4a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/dp16"
                        android:text="|" />

                    <TextView
                        android:id="@+id/signin_tvFindPw"
                        style="@style/Font_12_4a4a4a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onClickSignIn"
                        android:padding="@dimen/dp16"
                        android:text="@string/signin_find_pw" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/signin_laySns"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp100"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/signin_laySignup">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/dashline" />

                    <TextView
                        style="@style/Font_12_cccccc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp15"
                        android:text="OR" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/dashline" />
                </LinearLayout>


                <ImageButton
                    android:id="@+id/signin_btn_OAuthLoginImg"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp50"
                    android:background="@drawable/btn_naver_signin"
                    android:onClick="onClickSignIn"
                    app:layout_constraintTop_toBottomOf="@id/signin_laySns" />

                <!--            <com.nhn.android.naverlogin.ui.view.OAuthLoginButton-->
                <!--                android:id="@+id/signin_btn_OAuthLoginImg"-->
                <!--                android:layout_width="match_parent"-->
                <!--                android:layout_height="50dp"-->
                <!--                app:layout_constraintTop_toBottomOf="@id/signin_laySns" />-->


            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>