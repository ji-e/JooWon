<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="signInVm"
            type="com.example.uohih.joowon.ui.signin.SignInViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/c_ffffff"
        tools:context=".ui.signup.SignUpInitActiviy">

        <!--상단 타이틀 및 아이콘 바-->
        <com.example.uohih.joowon.customview.TopTitleView
            android:id="@+id/signin_title_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp60"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:tvTitle="@string/signin_title" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp20"
            android:paddingRight="@dimen/dp20"
            app:layout_constraintTop_toBottomOf="@id/signin_title_view">

            <TextView
                android:id="@+id/signin_tv_email"
                style="@style/Font_14_000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp30"
                android:text="@string/signin_email"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <EditText
                android:id="@+id/signin_edt_email"
                style="@style/Font_12_000000"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                android:layout_marginTop="@dimen/dp05"
                android:background="@drawable/input_selector"
                android:hint="@string/signin_email_hint"
                android:inputType="textEmailAddress"
                android:paddingLeft="@dimen/dp10"
                android:paddingRight="@dimen/dp30"
                android:singleLine="true"
                app:layout_constraintTop_toBottomOf="@id/signin_tv_email" />

            <ImageButton
                android:id="@+id/signin_btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp10"
                android:background="@drawable/btn_delete_selector"
                android:onClick="onClickSignIn"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/signin_edt_email"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/signin_edt_email"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/signin_tv_email_err"
                style="@style/Font_10_f13e51"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp10"
                app:argId="@{signInVm.signInFormState.emailMsg}"
                app:format="@{@string/string_format}"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/signin_edt_email" />

            <TextView
                android:id="@+id/signin_tv_pw"
                style="@style/Font_14_000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp05"
                android:text="@string/signin_pw"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/signin_tv_email_err" />


            <EditText
                android:id="@+id/signin_edt_pw"
                style="@style/Font_12_000000"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                android:layout_marginTop="@dimen/dp05"
                android:background="@drawable/input_selector"
                android:hint="@string/signin_pw_hint"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/dp10"
                android:paddingRight="@dimen/dp30"
                android:singleLine="true"
                app:layout_constraintTop_toBottomOf="@id/signin_tv_pw" />

            <CheckBox
                android:id="@+id/signin_chk_pw_visible"
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp10"
                android:background="@drawable/btn_eye_selector"
                android:button="@null"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/signin_edt_pw"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/signin_edt_pw" />

            <TextView
                android:id="@+id/signin_tv_pw_err"
                style="@style/Font_10_f13e51"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp10"
                app:argId="@{signInVm.signInFormState.passwordError}"
                app:format="@{@string/string_format}"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/signin_edt_pw" />

            <Button
                android:id="@+id/signin_btn_signin"
                style="@style/Font_16_ffffff"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50"
                android:layout_marginTop="@dimen/dp30"
                android:background="@drawable/btn_bottom_r4_selector"
                android:enabled="@{signInVm.signInFormState.dataValid}"
                android:onClick="onClickSignIn"
                android:text="@string/signin_title"
                app:layout_constraintTop_toBottomOf="@id/signin_edt_pw" />


            <LinearLayout
                android:id="@+id/signin_lay_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/signin_btn_signin">

                <TextView
                    android:id="@+id/signin_tv_signup"
                    style="@style/Font_12_4a4a4a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClickSignIn"
                    android:padding="@dimen/dp16"
                    android:text="@string/signin_sign_up" />

                <TextView
                    android:id="@+id/signin_tv_div"
                    style="@style/Font_12_4a4a4a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp16"
                    android:text="|" />

                <TextView
                    android:id="@+id/signin_tv_find_pw"
                    style="@style/Font_12_4a4a4a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp16"
                    android:paddingTop="@dimen/dp16"
                    android:paddingBottom="@dimen/dp16"
                    android:text="@string/signin_find_pw" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/signin_lay_sns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/signin_lay_signup">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/dashline" />

                <TextView
                    style="@style/Font_12_cccccc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp20"
                    android:text="OR" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/dashline" />
            </LinearLayout>


            <ImageButton
                android:id="@+id/signin_btn_OAuthLoginImg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50"
                android:background="@drawable/btn_naver_signin"
                android:onClick="onClickSignIn"
                app:layout_constraintTop_toBottomOf="@id/signin_lay_sns" />

            <!--            <com.nhn.android.naverlogin.ui.view.OAuthLoginButton-->
            <!--                android:id="@+id/signin_btn_OAuthLoginImg"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="50dp"-->
            <!--                app:layout_constraintTop_toBottomOf="@id/signin_lay_sns" />-->


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>